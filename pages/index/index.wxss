/**index.wxss**/

/* 
 * --------------
 * 首页轮播图分区
 * --------------
 */

.slider, 
.slider swiper,
.slider image {
  width: 100%;
  height: 390rpx;
}

/* 
 * --------------
 * 首页导航分区
 * --------------
 */

.index-nav {
  display: flex;
  flex-wrap: wrap;
}

.index-nav .nav-item {
  width: 33.3333%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  border-bottom: 1rpx solid #ccc;
}

.index-nav .nav-item:nth-child(3n)::after {
  width: 0;
}

.index-nav .nav-item image {
  width: 80rpx;
  height: 80rpx;
}

/* 
 * --------------
 * 首页入口分区
 * --------------
 */

.index-enter {
  display: flex;
  padding:20rpx 25rpx;
}

.index-enter .enter-item {
  display: flex;
  width: 50%;
  justify-content: center;
}

.index-enter .enter-item image {
  width: 320rpx;
  height:178rpx;
}
